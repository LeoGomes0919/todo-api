{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "dotenvx run -- tsx watch --inspect=0.0.0.0:9229 src/server.ts",
    "start": "dotenvx run -- node dist/server.js",
    "build": "tsup src --out-dir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "docker:dev:up": "docker compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down -v",
    "docker:prod:up": "docker compose up --build",
    "docker:prod:down": "docker compose down -v",
    "biome:format": "biome format src --write",
    "seed": "dotenvx run -- tsx src/shared/database/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.1",
    "@scalar/express-api-reference": "^0.8.24",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "mongoose": "^8.20.0",
    "redis": "^5.10.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@biomejs/biome": "2.3.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^24.10.1",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.12",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.12"
  }
}