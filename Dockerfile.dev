# Base com corepack/pnpm habilitados
FROM node:22-alpine AS base
WORKDIR /usr/src/app

ENV NODE_ENV=development

RUN apk add --no-cache bash curl \
  && corepack enable \
  && corepack prepare pnpm@latest --activate

COPY package.json pnpm-lock.yaml ./

FROM base AS deps

RUN pnpm install

FROM deps AS dev
WORKDIR /usr/src/app

ENV NODE_ENV=development

COPY . .

EXPOSE 3333

CMD ["npm", "run", "dev"]
